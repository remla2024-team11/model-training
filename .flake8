[flake8]
ignore =
    E203,  # whitespace before ':'
    E266,  # too many leading '#' for block comment
    E501,  # line too long (managed by black)
    W503,  # line break before binary operator

max-line-length = 88

max-complexity = 10

exclude =
    .git,
    __pycache__,
    build,
    dist,
    migrations,
    venv,
    docs,
    notebooks,
    operation,
    references,
    reports,
    eval

include =
    src/

select = B,C,E,F,W,T4,B9
